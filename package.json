{
  "name": "luma-words",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "dev:cf": "astro build && wrangler dev --local --persist-to .wrangler/state",
    "build": "astro build",
    "deploy": "npm run build && wrangler pages deploy dist --project-name luma-words",
    "deploy:cron": "wrangler deploy --config wrangler.cron.jsonc",
    "preview": "astro preview",
    "check": "astro check",
    "db:generate": "drizzle-kit generate",
    "db:migrate:local": "wrangler d1 migrations apply DB --local --persist-to .wrangler/state",
    "db:migrate:remote": "wrangler d1 migrations apply DB --remote",
    "db:init:local": "wrangler d1 execute DB --local --file db/schema.sql --persist-to .wrangler/state",
    "db:studio": "drizzle-kit studio",
    "astro": "astro",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@ant-design/icons": "^5.6.0",
    "@ant-design/x": "^2.1.1",
    "@ant-design/x-markdown": "^2.1.1",
    "@astrojs/cloudflare": "^12.6.12",
    "@astrojs/react": "^4.4.2",
    "@nanostores/react": "^1.0.0",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/themes": "^3.2.1",
    "@tailwindcss/vite": "^4.1.18",
    "antd": "^6.1.0",
    "antd-style": "^3.7.1",
    "astro": "^5.16.6",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.19",
    "drizzle-orm": "^0.45.1",
    "framer-motion": "^12.23.26",
    "lucide-react": "^0.561.0",
    "nanostores": "^1.1.0",
    "openai": "^6.14.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "temporal-polyfill": "^0.3.0",
    "uuid": "^13.0.0",
    "web-highlighter": "^0.7.4",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.6",
    "@chromatic-com/storybook": "^4.1.3",
    "@cloudflare/workers-types": "^4.20251217.0",
    "@storybook/addon-a11y": "^10.1.10",
    "@storybook/addon-docs": "^10.1.10",
    "@storybook/addon-onboarding": "^10.1.10",
    "@storybook/addon-vitest": "^10.1.10",
    "@storybook/react-vite": "^10.1.10",
    "@tailwindcss/typography": "^0.5.19",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitest/browser-playwright": "^4.0.16",
    "@vitest/coverage-v8": "^4.0.16",
    "drizzle-kit": "^0.31.8",
    "playwright": "^1.57.0",
    "storybook": "^10.1.10",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "^6.0.2",
    "vitest": "^4.0.16",
    "wrangler": "^4.55.0"
  }
}